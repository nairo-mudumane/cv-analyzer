generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EnumMetadataLang {
  PT
  EN
}

model Resume {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  url   String @unique
  token String

  metadata ResumeMetadata[]

  @@map("resumes")
}

model ResumeMetadata {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  resumeId String?
  resume   Resume? @relation(fields: [resumeId], references: [id])

  lang        EnumMetadataLang @default(EN)
  name        String?
  age         Int?
  description String?
  gender      String?
  headline    String?
  experience  String?
  education   String?
  skills      String[]
  other       String?

  @@map("resume_metadata")
}
