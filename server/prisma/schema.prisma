generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Resume {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  url   String @unique
  token String

  metadataId String
  metadata   ResumeMetadata @relation(fields: [metadataId], references: [id])

  @@map("resumes")
}

model ResumeMetadata {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  resume Resume[]

  lang    String?
  rawInfo String?

  name        String?
  age         Int?
  description String?
  gender      String?
  headline    String?
  experience  String?
  education   String?
  skills      String[]
  other       String?

  @@map("resume_metadata")
}
